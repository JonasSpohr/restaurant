<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Clientes</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#/home">Home</a>
            </li>
            <li>
                <a href="#/clients">Clientes</a>
            </li>
            <li class="active">
                <strong>Cliente</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Informações do cliente</h5>
                </div>
                <div class="ibox-content">
                    <tabset>
                        <tab heading="Dados básicos">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Empresa</label>
                                            <input type="text" class="form-control" ng-model="Client.companyName" placeholder="Empresa">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Nome</label>
                                            <input type="text" class="form-control" ng-model="Client.name" placeholder="Nome">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input type="text" class="form-control" ng-model="Client.email" placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Telefone comercial</label>
                                            <input type="text" class="form-control" ng-model="Client.phone" placeholder="Telefone" mask="(99) 9999-9999">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>CNPJ</label>
                                            <input type="text" class="form-control" ng-model="Client.cnpj" placeholder="CNPJ" mask="99.999.999/9999-99">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Contato 1</label>
                                            <textarea rows="3" class="form-control" ng-model="Client.contact1" placeholder="Contato 1"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Contato 2</label>
                                            <textarea rows="3" class="form-control" ng-model="Client.contact2" placeholder="Contato 2"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Logradouro</label>
                                            <input type="text" class="form-control" ng-model="Client.address.street" placeholder="Logradouro">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Número</label>
                                            <input type="text" class="form-control" ng-model="Client.address.number" placeholder="Número">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Complemento</label>
                                            <input type="text" class="form-control" ng-model="Client.address.complement" placeholder="Complemento">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Cidade</label>
                                            <input type="text" class="form-control" ng-model="Client.address.city" placeholder="Cidade">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>Estado</label>
                                            <input type="text" class="form-control" ng-model="Client.address.state" placeholder="Estado">
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label>CEP</label>
                                            <input type="text" class="form-control" ng-model="Client.address.zipCode" placeholder="CEP" mask="99999-999">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>País</label>
                                            <input type="text" class="form-control" ng-model="Client.address.country" placeholder="País">
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-md-12">
                                        <a href="#/clients" class="btn btn-sm btn-default pull-right" ng-disabled="isProcessing" style="margin-left: 10px">Voltar</a>
                                        <button class="btn btn-sm btn-danger pull-right" ng-disabled="isProcessing" ng-show="Client._id != undefined && isAdmin" style="margin-left: 10px" ng-click="delete()">Excluir</button>
                                        <button class="btn btn-sm btn-success pull-right" ng-disabled="isProcessing" ng-show="isAdmin" ng-click="save()">Salvar</button>
                                    </div>
                                </div>
                            </div>
                        </tab>
                        <tab heading="Eventos">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <button class="btn btn-sm btn-success pull-right" ng-show="isAdmin" ng-click="newEvent()">Cadastrar</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Evento</th>
                                                    <th>Tipo</th>
                                                    <th class="hidden-xs">Data</th>
                                                    <th>Contato</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="i in Client.events">
                                                    <td>{{i.event.title}}</td>
                                                    <td>{{i.event.type}}</td>
                                                    <td class="hidden-xs">{{i.event.date}}</td>
                                                    <td>{{i.contactName}}</td>
                                                    <td style="text-align: center">
                                                        <button class="btn btn-xs btn-success" ng-show="isAdmin" ng-disabled="isProcessing" ng-click="editEvent(i._id)">Editar</button>
                                                        <button class="btn btn-xs btn-success" ng-show="!isAdmin" ng-disabled="isProcessing" ng-click="editEvent(i._id)">Visualizar</button>
                                                        <button class="btn btn-xs btn-danger" ng-show="isAdmin" ng-disabled="isProcessing" ng-click="deleteEvent(i._id)">Excluir</button>
                                                    </td>
                                                </tr>
                                                <tr ng-show="Client.events.length == 0 && !isLoading">
                                                    <td colspan="5">Sem resultados</td>
                                                </tr>
                                                <tr ng-show="isLoading">
                                                    <td colspan="5">Consultando...</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                        </tab>
                    </tabset>
                    </div>
                </div>
            </div>
        </div>
    </div>