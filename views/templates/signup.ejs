    <div class="middle-box text-center loginscreen">
    <div>
        <p>Please, fill the fields below</p>
        <div class="form-group">
            <input type="text" class="form-control" ng-model="user.name" placeholder="Name" required="">
        </div>       
        <div class="form-group">
            <input type="email" class="form-control" ng-model="user.email" placeholder="Email" required="">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" ng-model="user.pwd" placeholder="Password" required="">
        </div>

        <button type="button" ng-click="save()" ng-disabled="isProcessing" class="btn btn-primary block full-width m-b">Create</button>    

        <a class="btn btn-sm btn-white btn-block" href="#/login">Cancel</a>
        <p class="m-t"> <small>ChooseRestaurant &copy; 2017</small> </p>
    </div>
</div>